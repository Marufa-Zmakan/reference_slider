<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="s_reference_slider" name="Reference slider">
        <section class="s_five_columns testimonials">
            <div class="container">
                <div class="row d-flex align-items-stretch owl-carousel" id="reference_carousel">
                    <div class="col-lg-2 item">
                        <img class="img-responsive" src="/web/image/website.s_reference_demo_image_1" alt="Odoo - Sample 1 for three columns"/>
                    </div>
                    <div class="col-lg-2 item">
                        <img class="img-responsive" src="/web/image/website.s_reference_demo_image_2" alt="Odoo - Sample 2 for three columns"/>
                    </div>
                    <div class="col-lg-2 item">
                        <img class="img-responsive" src="/web/image/website.s_reference_demo_image_3" alt="Odoo - Sample 3 for three columns"/>
                    </div>
                    <div class="col-lg-2 item">
                        <img class="img-responsive" src="/web/image/website.s_reference_demo_image_4" alt="Odoo - Sample 2 for three columns"/>
                    </div>
                    <div class="col-lg-2 item">
                        <img class="img-responsive" src="/web/image/website.s_reference_demo_image_5" alt="Odoo - Sample 3 for three columns"/>
                    </div>
                    <div class="col-lg-2 item">
                        <img class="img-responsive" src="/web/image/website.s_reference_demo_image_2" alt="Odoo - Sample 2 for three columns"/>
                    </div>
                    <div class="col-lg-2 item">
                        <img class="img-responsive" src="/web/image/website.s_reference_demo_image_3" alt="Odoo - Sample 3 for three columns"/>
                    </div>
                </div>
            </div>
        </section>
    </template>



    <template id="place_into_bar" inherit_id="website.snippets" name="Reference Slide">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="zts_web_reference_slider.s_reference_slider"
                    t-thumbnail="/zts_web_reference_slider/static/images/iconx.png"/>
        </xpath>
    </template>


    <template id="assent_front" inherit_id="website.assets_frontend" name="Website customization">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/zts_web_reference_slider/static/src/js/reference.js"/>
            <link href="/zts_web_reference_slider/static/lib/css/owl.carousel.min.css" rel="stylesheet" />
            <script type="text/javascript" src="/zts_web_reference_slider/static/lib/js/owl.carousel.min.js" />
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="portal.assets_frontend" name="Website Assets">
    <xpath expr="//link[last()]" position="after">
        <link rel="stylesheet" type="text/scss" href="/zts_web_reference_slider/static/src/scss/reference_slider.scss"/>
    </xpath>
    </template>


</odoo>
