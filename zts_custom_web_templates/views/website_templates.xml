<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="assets_frontend" inherit_id="portal.assets_frontend" name="Website Assets">
    <xpath expr="//link[last()]" position="after">
        <link rel="stylesheet" type="text/scss" href="/zts_custom_web_templates/static/src/scss/template.scss"/>
    </xpath>
    </template>

	<template id="template_header_contact_oe_structure_header_contact_1" inherit_id="website.template_header_contact" name="Template Header Contact (oe_structure_header_contact_1)">
		<xpath expr="//*[hasclass('oe_structure')][@id='oe_structure_header_contact_1']" position="replace">
			<div class="oe_structure oe_structure_solo" id="oe_structure_header_contact_1">
				<section class="s_text_block pt8 pb8 o_cc o_cc2" data-snippet="s_text_block" data-name="Text">
					<div class="container">
						<div class="language-social">
							<div>
								<small>
									<span class="text-muted webview-only"><b>Contact us</b></span>
									<i class="fa fa-1x fa-fw fa-phone ml-3 mr-2 webview-only"/><a class="margin-mob" href="tel:+97433993155">+974 3399 3155</a>
									<i class="fa fa-1x fa-fw fa-envelope ml-3 mr-2 webview-only"/><span><a href="mailto:info@zmakan.com">info@zmakan.com</a></span>
								</small>
							</div>
							<div>
								<div class="s_share no_icon_color" data-snippet="s_share" data-name="Social Media">
									<a href="https://www.facebook.com/zmakan" class="s_share_facebook" target="_blank">
										<i class="fa fa-facebook m-1"/>
									</a>
									<a href="https://twitter.com/TechZmakan" class="s_share_twitter" target="_blank">
										<i class="fa fa-twitter m-1"/>
									</a>
									<a href="https://www.linkedin.com/company/zmakan-technical-solutions" class="s_share_linkedin" target="_blank">
										<i class="fa fa-linkedin m-1"/>
									</a>
									<a href="https://www.youtube.com/channel/UCEtr_PydkRbR--gcsFssI6A" class="s_share_youtube" target="_blank">
										<i class="fa fa-youtube m-1"/>
									</a>
									<a href="https://www.instagram.com/zmakan.tech/" class="s_share_instagram" target="_blank">
										<i class="fa fa-instagram m-1"/>
									</a>
                                    <a style="color:#006388;font-weight: bold; border:none; padding:2% 4% 2% 4%;" t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code='en_US')" t-attf-class="js_change_lang #{'active' if request.lang.code=='en_US' else None}" t-if="request.env.lang == 'ar_001'">EN</a>
                                    <a style="color:#006388;font-weight: bold; border:none; padding:2% 4% 2% 4%;" t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code='ar_001')" t-attf-class="js_change_lang #{'active' if request.lang.code=='ar_001' else None}" t-if="request.env.lang == 'en_US'">ع</a>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</xpath>
	</template>

	<template id = "template_footer_minimalist" inherit_id="website.layout" name="Minimalist">
    <xpath expr="//div[@id='footer']" position="replace">
        <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
            <section class="s_text_block" data-snippet="s_text_block" data-name="Text">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-2 pt16 pb16">
                            <a href="/" class="o_footer_logo logo">
                                <img src="/zts_custom_web_templates/static/src/images/ZmakanTechnicalSolutions.png" class="img-fluid mx-auto" aria-label="Logo of MyCompany" title="MyCompany" role="img"/>
                            </a>
                        </div>
                        <div class="col-lg-5 d-flex align-items-center justify-content-center justify-content-lg-start pt16 pb16">
                            <ul class="list-inline mb-0 ml-3">
                                <li class="list-inline-item"><a href="/">Home</a></li>
                                <li class="list-inline-item"><a href="/about-zmakan">About us</a></li>
                                <li class="list-inline-item"><a href="/ict-solutions">ICT Solutions</a></li>
                                <li class="list-inline-item"><a href="/enterprise-solutions">Enterprise Solutions</a></li>
                            </ul>
                        </div>
                       <div class="col-lg-5 social-button">
                            <div class="pt16 pb16">
                            <div class="s_share text-right no_icon_color" data-snippet="s_share" data-name="Social Media">
                                <h5 class="s_share_title d-none">Follow us</h5>

                                <a href="https://www.facebook.com/zmakan" class="s_share_facebook" target="_blank">
                                    <i class="fa fa-2x fa-facebook m-1"/>
                                </a>
                                <a href="https://twitter.com/TechZmakan" class="s_share_twitter" target="_blank">
                                    <i class="fa fa-2x fa-twitter m-1"/>
                                </a>
                                <a href="https://www.linkedin.com/company/zmakan-technical-solutions" class="s_share_linkedin" target="_blank">
                                    <i class="fa fa-2x fa-linkedin m-1"/>
                                </a>
                                <a href="https://www.youtube.com/channel/UCEtr_PydkRbR--gcsFssI6A" class="s_share_youtube" target="_blank">
                                    <i class="fa fa-2x fa-youtube m-1"/>
                                </a>
                                <a href="https://www.instagram.com/zmakan.tech/" class="s_share_instagram" target="_blank">
                                    <i class="fa fa-2x fa-instagram m-1"/>
                                </a>
                            </div>
                        </div>
                            <div class="pt16 pb16 webview-only">
                            <a href="/contactus" class="btn btn-block btn-primary">Get in touch</a>
                        </div>
                       </div>
                    </div>
                    <div class="pt16 pb16 mobview-only">
                        <a href="/contactus" class="btn btn-block btn-primary">Get in touch</a>
                    </div>
                </div>
            </section>
        </div>
    </xpath>
</template>

<template id="copyright" inherit_id="website.layout">
    <xpath expr="//footer//span[hasclass('o_footer_copyright_name')]" position="replace">
        <span class="o_footer_copyright_name mr-2">©<script>document.write(new Date().getFullYear())</script><span> </span>Zmakan Technical Solutions</span>
    </xpath>
</template>

	<template name="Brand Promotion Message" id="web.brand_promotion_message">
        <t t-set="odoo_logo">
            <a target="_blank" t-attf-href="http://www.odoo.com?utm_source=db&amp;utm_medium=#{_utm_medium}" class="badge badge-light">
                <img alt="Odoo" src="/web/static/src/img/odoo_logo_tiny.png" style="height: 1em; vertical-align: baseline;"/>
            </a>
        </t>
<!--        <t t-set="final_message">Powered by %s%s</t>-->
<!--        <t t-raw="final_message % (odoo_logo, _message and ('- %s' % _message) or '')"/>-->
    </template>

</odoo>
